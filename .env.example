# ====================
# Application Settings
# ====================
APP_NAME=AI Data Analysis Service
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# ====================
# API Settings
# ====================
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ====================
# Database Settings
# ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_analysis_db

# 또는 직접 DATABASE_URL 제공
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_analysis_db

DB_ECHO=False
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ====================
# Security Settings
# ====================
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ====================
# Logging Settings
# ====================
LOG_LEVEL=INFO

# ====================
# Domain Plugin Settings
# ====================
# 도메인별 설정을 추가할 수 있습니다
# ENABLE_SAMPLE_DOMAIN=True
